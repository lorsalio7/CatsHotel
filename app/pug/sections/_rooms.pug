section.page__rooms.rooms
  .rooms__container.container
    h2.rooms__title.section-title Номера
    .rooms__slider.rooms-slider.splide
      .splide__track.rooms-slider__track
        ul.rooms-slider__list.splide__list
          +roomsSlides(pugData.rooms_slides)
      .rooms-slider__controls
        ul.splide__pagination.rooms-slider__pagination
        .rooms-slider__arrows.splide__arrows
          button(type="button" aria-label="Предыдущий слайд").splide__arrow.splide__arrow--prev.rooms-slider__arrow
            +svg("rooms-slider__arrow-icon", "prev-slide-ic", 6, 10)
          button(type="button" aria-label="Следующий слайд").splide__arrow.splide__arrow--next.rooms-slider__arrow
            +svg("rooms-slider__arrow-icon", "next-slide-ic", 6, 10)
